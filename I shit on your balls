local function resolve(value)
    if not Localization.Enabled then
        return value
    end
    if type(value) == "string" and value:sub(1, #Localization.Prefix) == Localization.Prefix then
        local key = value:sub(#Localization.Prefix + 1)
        local lang = Localization.Translations[Localization.DefaultLanguage]
        if lang and lang[key] then
            return lang[key]
        end
    end
    return value
end

local Title = "loc:SCRIPT_TITLE"
local Author = "WELCOME"
print("Windows Title title:", Window.Title)
print("Script Title: " .. resolve(Title))
print("Windows Author title:", Window.Author)
print("Author Localization: " .. resolve(Author))
